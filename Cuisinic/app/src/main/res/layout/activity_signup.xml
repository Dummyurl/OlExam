<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/back_new" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.4"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:isScrollContainer="true">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="150dp" android:layout_height="150dp" android:layout_marginBottom="10dp" android:src="@drawable/logo"/>
            <EditText android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:textColorHint="@color/colorPrimary" android:gravity="center" android:id="@+id/SignName" android:background="@drawable/edittextborder_white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="Name" android:inputType="text"/>
            <EditText android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:textColorHint="@color/colorPrimary" android:gravity="center" android:id="@+id/SignEmail" android:background="@drawable/edittextborder_white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="Email Id" android:inputType="textEmailAddress"/>
            <EditText android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:textColorHint="@color/colorPrimary" android:gravity="center" android:id="@+id/SignMobile" android:background="@drawable/edittextborder_white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="Mobile" android:maxLength="10" android:inputType="number"/>
            <EditText android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:textColorHint="@color/colorPrimary" android:gravity="center" android:id="@+id/SignPassword" android:background="@drawable/edittextborder_white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="Password" android:inputType="textPassword"/>
            <EditText android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:textColorHint="@color/colorPrimary" android:gravity="center" android:id="@+id/SignRePassword" android:background="@drawable/edittextborder_white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="Re-enter Password" android:inputType="textPassword"/>
            <Button android:textColor="#ffffff" android:id="@+id/SignUpMain" android:background="@drawable/buttonborder" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="SIGN UP"/>
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/colorAccent1" android:id="@+id/SignupLogin" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Already have an account? Login"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/progress_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.wang.avi.AVLoadingIndicatorView android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" app:indicatorColor="@color/colorPrimary" app:indicatorName="BallPulseIndicator"/>
                <TextView android:textColor="@color/colorAccent1" android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Registering, please wait"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
