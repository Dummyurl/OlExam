<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" app:cardCornerRadius="10dp">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="20sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Cuisinic Salad Bar"/>
                            <TextView android:paddingRight="160dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginBottom="10dp" android:text="@string/cusinic_menu_main"/>
                            <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:id="@+id/contact_us" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Contact Us"/>
                        </LinearLayout>
                        <ImageView android:layout_width="150dp" android:layout_height="150dp" android:src="@drawable/head_image_menu" android:scaleType="fitEnd" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:alpha="1"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView android:id="@+id/makeSaladCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" app:cardCornerRadius="10dp">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="20sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Make Your Own Salad"/>
                            <TextView android:paddingRight="160dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:text="@string/make_your_own_salad"/>
                        </LinearLayout>
                        <ImageView android:layout_width="150dp" android:layout_height="150dp" android:src="@drawable/make_salad" android:scaleType="fitEnd" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:alpha="1"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView android:id="@+id/sharedCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:layout_weight="1" app:cardCornerRadius="10dp">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="20sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Indian Menu"/>
                            <TextView android:paddingRight="100dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="50dp" android:layout_marginBottom="10dp" android:text="@string/indian_menu" android:layout_weight="1"/>
                        </LinearLayout>
                        <ImageView android:layout_width="150dp" android:layout_height="100dp" android:src="@drawable/indian_menu" android:scaleType="fitEnd" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:alpha="1"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <include layout="@layout/cuisinic_menu_1"/>
                <include layout="@layout/cuisinic_menu_2"/>
                <include layout="@layout/cuisinic_menu_3"/>
                <include layout="@layout/cuisinic_menu_4"/>
                <include layout="@layout/cuisinic_menu_5"/>
                <include layout="@layout/cuisinic_menu_6"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
