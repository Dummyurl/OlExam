<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" app:cardCornerRadius="10dp">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/recipeName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Recipe Name" android:layout_weight="2"/>
            <TextView android:textStyle="bold" android:textColor="#000000" android:id="@+id/recipePrice" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Price" android:layout_weight="8"/>
        </LinearLayout>
        <TextView android:id="@+id/recipeDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:text="This is where short description will be shown"/>
        <TextView android:id="@+id/recipeReason" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Reason: "/>
        <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:id="@+id/recipeStatus" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Status"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
