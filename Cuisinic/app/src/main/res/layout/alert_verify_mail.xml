<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/colorAccent1" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="It seems that you have not verified your email id, please verify your email id to proceed further."/>
        <TextView android:textColor="#000000" android:id="@+id/email" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Email: "/>
        <TextView android:textColor="#000000" android:id="@+id/status" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Status: "/>
        <TextView android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="If you have verified than click on refresh to get the updated status."/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <Button android:textColor="@color/colorAccent1" android:id="@+id/refreshButton" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="Refresh" android:layout_weight="1"/>
            <Button android:textColor="@color/colorAccent1" android:id="@+id/verifyButton" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="Verify" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/progressLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.wang.avi.AVLoadingIndicatorView android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" app:indicatorColor="@color/colorPrimary" app:indicatorName="BallPulseIndicator"/>
            <TextView android:textColor="@color/colorPrimary" android:id="@+id/progressText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=""/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
