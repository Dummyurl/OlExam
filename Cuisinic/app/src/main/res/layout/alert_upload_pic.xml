<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="7">
            <com.theartofdev.edmodo.cropper.CropImageView android:id="@+id/CropImageView" android:layout_width="match_parent" android:layout_height="wrap_content" app:cropAspectRatioX="400" app:cropAspectRatioY="400" app:cropFixAspectRatio="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:textColor="#ffffff" android:id="@+id/loadImage" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" android:text="Load Image" android:layout_weight="1"/>
            <Button android:textColor="#ffffff" android:id="@+id/doneCrop" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:text="Done" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
