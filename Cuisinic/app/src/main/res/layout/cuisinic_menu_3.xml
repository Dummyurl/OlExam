<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <android.support.v7.widget.CardView android:id="@+id/saladCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:layout_weight="1" app:cardCornerRadius="10dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Salad"/>
                    <TextView android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:layout_marginBottom="10dp" android:text="Choose from the varieties of salad available." android:layout_weight="1"/>
                </LinearLayout>
                <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/cuisinic_salad" android:scaleType="fitEnd" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:alpha="1"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/sandwichCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_weight="1" app:cardCornerRadius="10dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Sandwich"/>
                    <TextView android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:layout_marginBottom="10dp" android:text="Choose from the varieties of sandwich available." android:layout_weight="1"/>
                </LinearLayout>
                <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/cuisinic_sandwich" android:scaleType="fitEnd" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:alpha="1"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/wrapCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_weight="1" app:cardCornerRadius="10dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Wrap"/>
                    <TextView android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:layout_marginBottom="10dp" android:text="Choose from the varieties of wraps available." android:layout_weight="1"/>
                </LinearLayout>
                <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/cuisinic_wraps" android:scaleType="fitEnd" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:alpha="1"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
