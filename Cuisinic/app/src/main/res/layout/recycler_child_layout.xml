<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ItemDetails" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="10">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/itemName" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Item Name" android:layout_weight="3"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000000" android:gravity="end" android:id="@+id/itemPrice" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/Rupee" android:layout_weight="7"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/countLayout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:weightSum="10">
        <ImageView android:layout_gravity="center" android:id="@+id/itemType" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/cuisinic_veg"/>
        <TextView android:textColor="#787878" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="No. of Items" android:layout_weight="3.5"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2.6">
            <ImageView android:id="@+id/subs" android:padding="7dp" android:layout_width="50dp" android:layout_height="40dp" android:src="@drawable/subs"/>
            <EditText android:textColor="#000000" android:id="@+id/quantity" android:padding="5dp" android:focusable="false" android:layout_width="30dp" android:layout_height="wrap_content" android:text="0" android:maxLength="2" android:inputType="number"/>
            <ImageView android:id="@+id/add" android:padding="10.2dp" android:layout_width="50dp" android:layout_height="40dp" android:src="@drawable/add"/>
        </LinearLayout>
        <Button android:id="@+id/addToCart" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:text="Add" android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout android:background="#aeaeae" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp"/>
    <View android:id="@+id/view" android:layout_width="match_parent" android:layout_height="80dp"/>
</LinearLayout>
